<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nevyblue"
    tools:context=".adminloginActivity">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/ivsignupapplogo"
            android:src="@drawable/logo"
            android:layout_marginVertical="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="120dp"
            />

        <TextView
            android:id="@+id/tvsignuptitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/audiowide"
            android:text="solemates"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="112dp"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tvsignuptitle"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvsignupsignup"
                    android:text="Sign Up"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/nevyblue"
                    android:textSize="24sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign up using admin data "
                    android:gravity="center"
                    android:textColor="@color/gravy"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:hint="Username"
                    android:background="@drawable/shape"
                    android:padding="10dp"
                    android:inputType="text"
                    android:id="@+id/etloginadminusername"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:hint="Password"
                    android:background="@drawable/shape"
                    android:padding="10dp"
                    android:inputType="textPassword"
                    android:id="@+id/etloginadminpassword"
                    />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="show password"
                    android:id="@+id/cbadminloginshowpassword"
                    android:layout_marginStart="20dp"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnloginadminlogin"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="Log In "
                    android:textColor="@color/nevyblue"
                    android:backgroundTint="@color/yellow"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvloginadmindelivery"
                    android:text="For delivery boy login here | click here"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/blue"
                    android:textStyle="bold"/>




            </LinearLayout>

        </androidx.cardview.widget.CardView>



</RelativeLayout>