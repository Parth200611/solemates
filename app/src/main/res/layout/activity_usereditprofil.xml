<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nevyblue"
    tools:context=".usereditprofilActivity">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/ivsignupapplogo"
        android:src="@drawable/logo"
        android:layout_marginVertical="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="120dp"
        />

    <TextView
        android:id="@+id/tvsignuptitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/audiowide"
        android:text="solemates"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="112dp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvsignuptitle"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="5dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPDATE ACCOUNT DETAILS"
            android:textColor="@color/yellow"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="12dp"
            android:textStyle="bold"
            />
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Here you can easyli update your account details. select the option given below to update your account details"
            android:textColor="@color/gravy"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="12dp"
            android:textStyle="bold"
             android:layout_marginEnd="60dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:id="@+id/cvusereditprofileditemail"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click here to update E-Mail"
                android:textColor="@color/blue"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/baseline_alternate_email_24"
                android:drawablePadding="5dp"
                android:textSize="16sp"
                />
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:id="@+id/cvusereditprofileditpassword"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click here to update Password"
                android:textColor="@color/blue"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="5dp"
                android:textSize="16sp"
                />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>