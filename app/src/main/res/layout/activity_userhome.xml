<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userhomeActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fluserhomeframe"
        android:layout_above="@+id/userhomebottomnavigation"
        />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:id="@+id/userhomebottomnavigation"
        app:menu="@menu/userhomebottomnevigationmenu"
        android:layout_alignParentBottom="true"
        app:itemRippleColor="@color/yellow"
        app:itemIconTint="@color/nevyblue"
        app:itemActiveIndicatorStyle="@style/App.Custom.Indicator"
        app:itemTextColor="@color/nevyblue"
        android:background="@color/white"

        />

</RelativeLayout>