<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvlvCtaegorywiseproductcardview"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ImageView
                android:id="@+id/ivlvGetcategorywiseproductimage"
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:src="@drawable/shoesimage" />

            <TextView
                android:id="@+id/tvlvGetcategorywiseproductshoesname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="155dp"
                android:text="Shoes Name"
                android:textColor="@color/nevyblue"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="155dp"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvlvGetcategorywiseproductshopname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shop Name"
                    android:textColor="@color/gravy"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvvlvGetcategorywiseproductrating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@color/green"
                    android:drawableRight="@drawable/baseline_star_24"
                    android:text="Shop Name"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvlvGetcategorywiseproductcategoryname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="155dp"
                android:layout_marginTop="72dp"
                android:text="categoryname Name"
                android:textColor="@color/gravy"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvlvGetcategorywiseproductprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="155dp"
                android:layout_marginTop="95dp"
                android:text="price"
                android:textColor="@color/gravy"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvlvGetcategorywiseproductdiscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="155dp"
                android:layout_marginTop="116dp"
                android:text="Discription"
                android:textColor="@color/gravy"
                android:textSize="14sp"
                android:textStyle="normal" />



            <TextView
                android:id="@+id/tvlvproductoffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="155dp"
                android:layout_marginTop="138dp"
                android:drawableLeft="@drawable/baseline_local_offer_24"
                android:drawablePadding="3dp"
                android:text="offers"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:textStyle="normal" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>