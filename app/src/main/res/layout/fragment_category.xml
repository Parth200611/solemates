<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".CategoryFragment">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/svcategoryfragmentsearchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:queryHint="Search product category"
        app:iconifiedByDefault="false"
        android:background="@drawable/shape"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvUsercategoryFragmentshoescategory"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvUsercategoryFragmentTextnocategory"
        android:text="No Category Present"
        android:textSize="30sp"
        android:textColor="@color/yellow"
        android:textStyle="bold"
        android:fontFamily="@font/audiowide"
        android:visibility="gone"
        />



</LinearLayout>