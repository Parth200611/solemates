<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forgottenpasswordnumberActivity"
    android:background="@color/nevyblue"
    >
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/ivsignupapplogo"
        android:src="@drawable/logo"
        android:layout_marginVertical="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="120dp"
        />

    <TextView
        android:id="@+id/tvsignuptitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/audiowide"
        android:text="solemates"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="112dp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvsignuptitle"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="5dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPDATE PASSWORD"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:textSize="26sp"
            android:textColor="@color/nevyblue"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ready to secure your accounts? Enter the number of users who need a password refresh. We'll send a quick verification code to their mobile number. With just a few clicks, they can create strong, new passwords and keep their data safe. Let's make it happen!"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="50dp"
            android:textSize="10sp"
            android:textColor="@color/gravy"
            android:textStyle="bold"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etfpmobileno"
            android:hint="+91-0000000000"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/shape"
            android:padding="10dp"
            android:inputType="number"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnfpnext"
            android:text="NEXT"
            android:layout_marginTop="300dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:backgroundTint="@color/yellow"
            android:textColor="@color/nevyblue"
            />




    </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>